@{
    ViewData["Title"] = "Access Denied";
}

<div style="display: flex; flex-direction: column; align-items: center; justify-content: center; min-height: calc(100vh - 180px); text-align: center; padding: 24px;">
    <div class="mobile-alert mobile-alert-warning" style="width: 100%; margin-bottom: 24px;">
        <strong>Access Denied!</strong> You do not have permission to access this resource.
    </div>

    <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="#f59e0b" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" style="margin-bottom: 24px;">
        <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
        <line x1="12" y1="9" x2="12" y2="13"></line>
        <line x1="12" y1="17" x2="12.01" y2="17"></line>
    </svg>

    <p style="color: var(--muted-foreground); margin-bottom: 24px;">
        If you believe you should have access, please contact your administrator.
    </p>

    <a href="@Url.Action("Index", "Home")" class="mobile-btn mobile-btn-primary">
        Go to Home
    </a>
</div>
