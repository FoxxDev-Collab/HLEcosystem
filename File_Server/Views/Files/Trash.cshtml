@model IEnumerable<HLE.FileServer.Models.FileEntry>
@{
    ViewData["Title"] = "Trash";
    var retentionDays = ViewBag.TrashRetentionDays as int? ?? 30;
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <h2 class="mb-1">
                        <i data-lucide="trash-2" class="me-2" style="width: 28px; height: 28px;"></i>
                        Trash
                    </h2>
                    <p class="text-muted mb-0">Items are permanently deleted after @retentionDays days</p>
                </div>
                <div class="btn-group">
                    <a href="@Url.Action("Index", "Files")" class="btn btn-outline-secondary">
                        <i data-lucide="arrow-left" class="me-2" style="width: 16px; height: 16px;"></i>
                        Back to Files
                    </a>
                    @if (Model != null && Model.Any())
                    {
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#emptyTrashModal">
                            <i data-lucide="trash" class="me-2" style="width: 16px; height: 16px;"></i>
                            Empty Trash
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Trash Contents -->
    @if (Model != null && Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Deleted Items (@Model.Count())</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Size</th>
                                        <th>Type</th>
                                        <th>Deleted</th>
                                        <th>Days Left</th>
                                        <th style="width: 180px;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var entry in Model)
                                    {
                                        var daysRemaining = entry.DeletedDate.HasValue
                                            ? Math.Max(0, retentionDays - (int)(DateTime.UtcNow - entry.DeletedDate.Value).TotalDays)
                                            : retentionDays;
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (entry.IsFolder)
                                                    {
                                                        <i data-lucide="folder" class="me-2 text-muted" style="width: 20px; height: 20px;"></i>
                                                    }
                                                    else
                                                    {
                                                        <i data-lucide="@GetFileIconLucide(entry.ContentType)" class="me-2 text-muted" style="width: 18px; height: 18px;"></i>
                                                    }
                                                    <span class="text-muted">@entry.FileName</span>
                                                </div>
                                            </td>
                                            <td>@(entry.IsFolder ? "-" : FormatFileSize(entry.FileSize))</td>
                                            <td>
                                                @if (entry.IsFolder)
                                                {
                                                    <span class="badge bg-warning">Folder</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@GetFileExtension(entry.FileName)</span>
                                                }
                                            </td>
                                            <td>
                                                @if (entry.DeletedDate.HasValue)
                                                {
                                                    <span title="@entry.DeletedDate.Value.ToString("f")">
                                                        @entry.DeletedDate.Value.ToString("MMM d, yyyy")
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (daysRemaining <= 7)
                                                {
                                                    <span class="badge bg-danger">@daysRemaining days</span>
                                                }
                                                else if (daysRemaining <= 14)
                                                {
                                                    <span class="badge bg-warning text-dark">@daysRemaining days</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@daysRemaining days</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <form asp-action="Restore" asp-controller="Files" method="post" style="display: inline;">
                                                        <input type="hidden" name="id" value="@entry.Id" />
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-sm btn-success" title="Restore">
                                                            <i data-lucide="rotate-ccw" style="width: 14px; height: 14px;"></i>
                                                        </button>
                                                    </form>
                                                    <button type="button" class="btn btn-sm btn-danger"
                                                            onclick="confirmPermanentDelete(@entry.Id, '@entry.FileName.Replace("'", "\\'")')"
                                                            title="Delete Permanently">
                                                        <i data-lucide="x" style="width: 14px; height: 14px;"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="text-center py-5">
                    <i data-lucide="trash-2" class="text-muted mb-3" style="width: 64px; height: 64px;"></i>
                    <h4 class="text-muted">Trash is empty</h4>
                    <p class="text-muted">Deleted items will appear here</p>
                    <a href="@Url.Action("Index", "Files")" class="btn btn-primary mt-2">
                        <i data-lucide="arrow-left" class="me-2" style="width: 16px; height: 16px;"></i>
                        Back to My Files
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<!-- Empty Trash Confirmation Modal -->
<div class="modal fade" id="emptyTrashModal" tabindex="-1" aria-labelledby="emptyTrashModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="emptyTrashModalLabel">
                    <i data-lucide="alert-triangle" class="me-2 text-danger" style="width: 20px; height: 20px;"></i>
                    Empty Trash
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to permanently delete all items in the trash?</p>
                <p class="text-danger mb-0"><strong>This action cannot be undone.</strong></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="EmptyTrash" asp-controller="Files" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Empty Trash</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Permanent Delete Confirmation Modal -->
<div class="modal fade" id="permanentDeleteModal" tabindex="-1" aria-labelledby="permanentDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="permanentDeleteModalLabel">
                    <i data-lucide="alert-triangle" class="me-2 text-danger" style="width: 20px; height: 20px;"></i>
                    Delete Permanently
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to permanently delete <strong id="deleteItemName"></strong>?</p>
                <p class="text-danger mb-0"><strong>This action cannot be undone.</strong></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="PermanentDelete" asp-controller="Files" method="post" id="permanentDeleteForm">
                    <input type="hidden" name="id" id="deleteItemId" />
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete Permanently</button>
                </form>
            </div>
        </div>
    </div>
</div>

@functions {
    string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB", "TB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }

    string GetFileExtension(string fileName)
    {
        var ext = System.IO.Path.GetExtension(fileName);
        return string.IsNullOrEmpty(ext) ? "file" : ext.TrimStart('.').ToUpper();
    }

    string GetFileIconLucide(string contentType)
    {
        if (contentType.StartsWith("image/")) return "image";
        if (contentType.StartsWith("video/")) return "video";
        if (contentType.StartsWith("audio/")) return "music";
        if (contentType.Contains("pdf")) return "file-text";
        if (contentType.Contains("word") || contentType.Contains("document")) return "file-text";
        if (contentType.Contains("excel") || contentType.Contains("spreadsheet")) return "file-spreadsheet";
        if (contentType.Contains("powerpoint") || contentType.Contains("presentation")) return "presentation";
        if (contentType.Contains("zip") || contentType.Contains("rar") || contentType.Contains("compressed")) return "file-archive";
        if (contentType.Contains("text")) return "file-text";
        if (contentType.Contains("code") || contentType.Contains("json") || contentType.Contains("xml")) return "file-code";
        return "file";
    }
}

<style>
    .card {
        background: var(--card);
        border-color: var(--border);
    }

    .card-header {
        background: var(--muted);
        color: var(--foreground);
        border-bottom: 1px solid var(--border);
    }

    .table {
        color: var(--foreground) !important;
        background: transparent;
        --bs-table-color: var(--foreground);
        --bs-table-bg: transparent;
        --bs-table-border-color: var(--border);
    }

    .table th {
        background: var(--muted) !important;
        color: var(--foreground) !important;
        font-weight: 600;
        border-bottom: 2px solid var(--border);
    }

    .table td {
        background: var(--card) !important;
        color: var(--foreground) !important;
        border-color: var(--border) !important;
    }

    .table tbody tr:hover {
        background: var(--accent) !important;
    }

    .table tbody tr:hover td {
        background: var(--accent) !important;
    }

    .modal-content {
        background: var(--card);
        border-color: var(--border);
    }

    .modal-header {
        border-bottom-color: var(--border);
    }

    .modal-footer {
        border-top-color: var(--border);
    }
</style>

@section Scripts {
    <script>
        let permanentDeleteModal;

        document.addEventListener('DOMContentLoaded', function() {
            permanentDeleteModal = new bootstrap.Modal(document.getElementById('permanentDeleteModal'));

            // Re-initialize Lucide icons after page load
            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }
        });

        function confirmPermanentDelete(itemId, itemName) {
            document.getElementById('deleteItemId').value = itemId;
            document.getElementById('deleteItemName').textContent = itemName;
            permanentDeleteModal.show();
        }
    </script>
}
