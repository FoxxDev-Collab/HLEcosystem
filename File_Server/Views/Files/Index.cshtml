@model IEnumerable<HLE.FileServer.Models.FileEntry>
@using System.IO
@using System.Text.Json
@using System.Web
@using HLE.FileServer.Helpers
@{
    ViewData["Title"] = "My Files";
    var breadcrumbs = ViewBag.Breadcrumbs as List<(int? Id, string Name)> ?? new List<(int? Id, string Name)>();
    var currentFolderId = ViewBag.CurrentFolderId as int?;

    // Helper to safely encode strings for JavaScript
    string JsEncode(string value) => JsonSerializer.Serialize(value);
}

<div class="container-fluid py-4">
    <!-- Breadcrumb Navigation -->
    <div class="row mb-3">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    @foreach (var crumb in breadcrumbs)
                    {
                        @if (crumb == breadcrumbs.Last())
                        {
                            <li class="breadcrumb-item active" aria-current="page">@crumb.Name</li>
                        }
                        else
                        {
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index", "Files", new { folderId = crumb.Id })">@crumb.Name</a>
                            </li>
                        }
                    }
                </ol>
            </nav>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <h2 class="mb-0">@(breadcrumbs.Last().Name)</h2>
                <div class="btn-group d-none d-md-flex">
                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#newFolderModal">
                        <i data-lucide="folder-plus" class="me-2" style="width: 16px; height: 16px;"></i>
                        New Folder
                    </button>
                    <button type="button" class="btn btn-primary" onclick="document.getElementById('fileInput').click()">
                        <i data-lucide="upload" class="me-2" style="width: 16px; height: 16px;"></i>
                        Upload Files
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Mobile Action Buttons -->
    <div class="mobile-action-bar d-md-none">
        <button type="button" class="btn btn-success w-100" data-bs-toggle="modal" data-bs-target="#newFolderModal">
            <i data-lucide="folder-plus" class="me-2" style="width: 20px; height: 20px;"></i>
            New Folder
        </button>
        <button type="button" class="btn btn-primary w-100" onclick="document.getElementById('fileInput').click()">
            <i data-lucide="upload" class="me-2" style="width: 20px; height: 20px;"></i>
            Upload Files
        </button>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Upload Area -->
    <div class="row mb-4">
        <div class="col-12">
            <div id="dropZone" class="upload-drop-zone">
                <i data-lucide="upload" class="mb-3" style="width: 48px; height: 48px;"></i>
                <h5>Drag & Drop Files Here</h5>
                <p class="text-muted-foreground mb-0">or click to browse</p>
                <form id="uploadForm" asp-action="Upload" asp-controller="Files" method="post" enctype="multipart/form-data">
                    <input type="file" id="fileInput" name="files" multiple style="display: none;" />
                    <input type="hidden" name="currentFolderId" value="@currentFolderId" />
                    @Html.AntiForgeryToken()
                </form>
            </div>
        </div>
    </div>

    <!-- Files/Folders List -->
    @if (Model != null && Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Contents (@Model.Count() items)</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Size</th>
                                        <th>Type</th>
                                        <th>Modified</th>
                                        <th style="width: 150px;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var entry in Model)
                                    {
                                        <tr>
                                            <td>
                                                @if (entry.IsFolder)
                                                {
                                                    <a href="@Url.Action("Index", "Files", new { folderId = entry.Id })" class="text-decoration-none">
                                                        <div class="d-flex align-items-center">
                                                            <i data-lucide="folder" class="me-2" style="width: 20px; height: 20px;"></i>
                                                            <strong>@entry.FileName</strong>
                                                        </div>
                                                    </a>
                                                }
                                                else
                                                {
                                                    <div class="d-flex align-items-center">
                                                        <i data-lucide="@GetFileIconLucide(entry.ContentType)" class="me-2" style="width: 18px; height: 18px;"></i>
                                                        <strong>@entry.FileName</strong>
                                                    </div>
                                                }
                                            </td>
                                            <td>@(entry.IsFolder ? "-" : FormatFileSize(entry.FileSize))</td>
                                            <td>
                                                @if (entry.IsFolder)
                                                {
                                                    <span class="badge bg-warning">Folder</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@GetFileExtension(entry.FileName)</span>
                                                }
                                            </td>
                                            <td>@entry.UploadDate.ToLocalTime().ToString("MMM dd, yyyy HH:mm")</td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    @if (!entry.IsFolder)
                                                    {
                                                        <a href="@Url.Action("Download", "Files", new { id = entry.Id })" class="btn btn-outline-primary" title="Download">
                                                            <i data-lucide="download" style="width: 16px; height: 16px;"></i>
                                                        </a>
                                                        <button type="button" class="btn btn-outline-secondary" title="Version History" onclick="openVersionModal(@entry.Id, @JsEncode(entry.FileName))">
                                                            <i data-lucide="history" style="width: 16px; height: 16px;"></i>
                                                        </button>
                                                    }
                                                    <button type="button" class="btn btn-outline-info" title="Rename" onclick="openRenameModal(@entry.Id, @JsEncode(entry.FileName))">
                                                        <i data-lucide="edit" style="width: 16px; height: 16px;"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-outline-secondary" title="Move" onclick="openMoveModal(@entry.Id, @JsEncode(entry.FileName), @(entry.IsFolder ? "true" : "false"))">
                                                        <i data-lucide="move" style="width: 16px; height: 16px;"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-outline-success" title="Share" onclick="openShareModal(@entry.Id, @JsEncode(entry.FileName))">
                                                        <i data-lucide="share-2" style="width: 16px; height: 16px;"></i>
                                                    </button>
                                                    <form asp-action="Delete" asp-route-id="@entry.Id" method="post" style="display: inline;" onsubmit="return confirm('@(entry.IsFolder ? "Are you sure you want to delete this folder and all its contents?" : "Are you sure you want to delete this file?")');">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-outline-danger" title="Delete">
                                                            <i data-lucide="trash-2" style="width: 16px; height: 16px;"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Mobile Card View -->
                        <div class="mobile-file-list" style="display: none;">
                            @foreach (var entry in Model)
                            {
                                <div class="mobile-file-card">
                                    @if (entry.IsFolder)
                                    {
                                        <a href="@Url.Action("Index", "Files", new { folderId = entry.Id })" class="text-decoration-none">
                                            <div class="d-flex align-items-start gap-3">
                                                <div class="mobile-file-icon"><i data-lucide="folder" style="width: 32px; height: 32px;"></i></div>
                                                <div class="mobile-file-info">
                                                    <div class="mobile-file-name">@Html.Encode(entry.FileName)</div>
                                                    <div class="mobile-file-meta">
                                                        <span class="badge bg-warning">Folder</span>
                                                        <span>@entry.UploadDate.ToLocalTime().ToString("MMM dd, yyyy")</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </a>
                                        <div class="mobile-file-actions">
                                            <button type="button" class="btn btn-outline-info" onclick="openRenameModal(@entry.Id, @JsEncode(entry.FileName))">
                                                <i data-lucide="edit" style="width: 16px; height: 16px;"></i>
                                                Rename
                                            </button>
                                            <button type="button" class="btn btn-outline-secondary" onclick="openMoveModal(@entry.Id, @JsEncode(entry.FileName), true)">
                                                <i data-lucide="move" style="width: 16px; height: 16px;"></i>
                                                Move
                                            </button>
                                            <button type="button" class="btn btn-outline-success" onclick="openShareModal(@entry.Id, @JsEncode(entry.FileName))">
                                                <i data-lucide="share-2" style="width: 16px; height: 16px;"></i>
                                                Share
                                            </button>
                                            <form asp-action="Delete" asp-route-id="@entry.Id" method="post" style="flex: 1;" onsubmit="return confirm('Are you sure you want to delete this folder and all its contents?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger w-100">
                                                    <i data-lucide="trash-2" style="width: 16px; height: 16px;"></i>
                                                    Delete
                                                </button>
                                            </form>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-start gap-3">
                                            <div class="mobile-file-icon"><i data-lucide="@GetFileIconLucide(entry.ContentType)" style="width: 32px; height: 32px;"></i></div>
                                            <div class="mobile-file-info">
                                                <div class="mobile-file-name">@Html.Encode(entry.FileName)</div>
                                                <div class="mobile-file-meta">
                                                    <span class="badge bg-secondary">@GetFileExtension(entry.FileName)</span>
                                                    <span>@FormatFileSize(entry.FileSize)</span>
                                                    <span>@entry.UploadDate.ToLocalTime().ToString("MMM dd")</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="mobile-file-actions">
                                            <a href="@Url.Action("Download", "Files", new { id = entry.Id })" class="btn btn-outline-primary">
                                                <i data-lucide="download" style="width: 16px; height: 16px;"></i>
                                                Download
                                            </a>
                                            <button type="button" class="btn btn-outline-secondary" onclick="openVersionModal(@entry.Id, @JsEncode(entry.FileName))">
                                                <i data-lucide="history" style="width: 16px; height: 16px;"></i>
                                                Versions
                                            </button>
                                            <button type="button" class="btn btn-outline-info" onclick="openRenameModal(@entry.Id, @JsEncode(entry.FileName))">
                                                <i data-lucide="edit" style="width: 16px; height: 16px;"></i>
                                                Rename
                                            </button>
                                            <button type="button" class="btn btn-outline-secondary" onclick="openMoveModal(@entry.Id, @JsEncode(entry.FileName), false)">
                                                <i data-lucide="move" style="width: 16px; height: 16px;"></i>
                                                Move
                                            </button>
                                            <button type="button" class="btn btn-outline-success" onclick="openShareModal(@entry.Id, @JsEncode(entry.FileName))">
                                                <i data-lucide="share-2" style="width: 16px; height: 16px;"></i>
                                                Share
                                            </button>
                                            <form asp-action="Delete" asp-route-id="@entry.Id" method="post" style="flex: 1;" onsubmit="return confirm('Are you sure you want to delete this file?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger w-100">
                                                    <i data-lucide="trash-2" style="width: 16px; height: 16px;"></i>
                                                    Delete
                                                </button>
                                            </form>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i data-lucide="folder" class="text-muted mb-3" style="width: 64px; height: 64px;"></i>
                        <h4>This Folder is Empty</h4>
                        <p class="text-muted-foreground">Create a new folder or upload files to get started!</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- New Folder Modal -->
<div class="modal fade" id="newFolderModal" tabindex="-1" aria-labelledby="newFolderModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="CreateFolder" asp-controller="Files" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="newFolderModalLabel">Create New Folder</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="folderName" class="form-label">Folder Name</label>
                        <input type="text" class="form-control" id="folderName" name="folderName" required autofocus>
                    </div>
                    <input type="hidden" name="parentFolderId" value="@currentFolderId" />
                    @Html.AntiForgeryToken()
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Create Folder</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Rename Modal -->
<div class="modal fade" id="renameModal" tabindex="-1" aria-labelledby="renameModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="renameModalLabel">Rename Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="newItemName" class="form-label">New Name</label>
                    <input type="text" class="form-control" id="newItemName" required autofocus>
                </div>
                <div id="renameAlert" class="alert d-none" role="alert"></div>
                <input type="hidden" id="renameItemId" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-info" onclick="submitRename()">Rename</button>
            </div>
        </div>
    </div>
</div>

<!-- Move Modal -->
<div class="modal fade" id="moveModal" tabindex="-1" aria-labelledby="moveModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="moveForm" asp-action="Move" asp-controller="Files" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="moveModalLabel">Move Item</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Move <strong id="moveItemName"></strong> to:</p>
                    <div class="mb-3">
                        <label for="destinationFolder" class="form-label">Destination Folder</label>
                        <select class="form-select" id="destinationFolder" name="destinationFolderId" required>
                            <option value="">Home (Root)</option>
                        </select>
                    </div>
                    <input type="hidden" id="moveItemId" name="id" />
                    @Html.AntiForgeryToken()
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Move</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Share Modal -->
<div class="modal fade" id="shareModal" tabindex="-1" aria-labelledby="shareModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="shareForm" asp-action="Share" asp-controller="Shares" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="shareModalLabel">Share Item</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Share <strong id="shareItemName"></strong> with:</p>
                    <div class="mb-3">
                        <label for="userSearch" class="form-label">Search for User</label>
                        <input type="text" class="form-control" id="userSearch" placeholder="Type username or email..." autocomplete="off">
                        <div id="userSearchResults" class="list-group mt-2" style="max-height: 200px; overflow-y: auto;"></div>
                    </div>
                    <div class="mb-3">
                        <label for="sharePermission" class="form-label">Permission Level</label>
                        <select class="form-select" id="sharePermission" name="permission" required>
                            <option value="0">View Only - Can only view and download</option>
                            <option value="1">View & Upload - Can view, download, and upload files</option>
                            <option value="2">Full Edit - Can view, download, upload, delete, and move</option>
                        </select>
                    </div>
                    <input type="hidden" id="shareItemId" name="fileEntryId" />
                    <input type="hidden" id="shareWithUserId" name="sharedWithUserId" />
                    <div id="shareAlert" class="alert d-none" role="alert"></div>
                    @Html.AntiForgeryToken()
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success" id="shareSubmitBtn" disabled>Share</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Version History Modal -->
<div class="modal fade" id="versionModal" tabindex="-1" aria-labelledby="versionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="versionModalLabel">
                    <i data-lucide="history" class="me-2" style="width: 20px; height: 20px;"></i>
                    Version History: <span id="versionFileName"></span>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="versionLoading" class="text-center py-4">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
                <div id="versionContent" style="display: none;">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <span class="text-muted">Versioning:</span>
                            <span id="versioningStatus" class="badge"></span>
                        </div>
                        <button type="button" class="btn btn-sm btn-outline-secondary" id="toggleVersioningBtn" onclick="toggleVersioning()">
                            Toggle Versioning
                        </button>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Version</th>
                                    <th>Size</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="versionTableBody">
                            </tbody>
                        </table>
                    </div>
                    <div id="noVersions" class="text-center text-muted py-4" style="display: none;">
                        <i data-lucide="clock" style="width: 48px; height: 48px;"></i>
                        <p class="mt-2">No previous versions available</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@functions {
    string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB", "TB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }

    string GetFileExtension(string fileName)
    {
        var ext = System.IO.Path.GetExtension(fileName);
        return string.IsNullOrEmpty(ext) ? "file" : ext.TrimStart('.').ToUpper();
    }

    string GetFileIconLucide(string contentType)
    {
        if (contentType.StartsWith("image/")) return "image";
        if (contentType.StartsWith("video/")) return "video";
        if (contentType.StartsWith("audio/")) return "music";
        if (contentType.Contains("pdf")) return "file-text";
        if (contentType.Contains("word") || contentType.Contains("document")) return "file-text";
        if (contentType.Contains("excel") || contentType.Contains("spreadsheet")) return "file-spreadsheet";
        if (contentType.Contains("powerpoint") || contentType.Contains("presentation")) return "presentation";
        if (contentType.Contains("zip") || contentType.Contains("rar") || contentType.Contains("compressed")) return "file-archive";
        if (contentType.Contains("text")) return "file-text";
        if (contentType.Contains("code") || contentType.Contains("json") || contentType.Contains("xml")) return "file-code";
        return "file";
    }
}

<style>
    .upload-drop-zone {
        border: 2px dashed var(--border);
        border-radius: var(--radius);
        padding: 3rem;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s ease;
        background: var(--card);
    }

    .upload-drop-zone:hover,
    .upload-drop-zone.drag-over {
        border-color: var(--primary);
        background: var(--accent);
    }

    .card {
        background: var(--card);
        border-color: var(--border);
    }

    .card-header {
        background: var(--muted);
        color: var(--foreground);
        border-bottom: 1px solid var(--border);
    }

    .card-body {
        background: var(--card);
    }

    .table {
        color: var(--foreground) !important;
        background: transparent;
        --bs-table-color: var(--foreground);
        --bs-table-bg: transparent;
        --bs-table-border-color: var(--border);
    }

    .table th {
        background: var(--muted) !important;
        color: var(--foreground) !important;
        font-weight: 600;
        border-bottom: 2px solid var(--border);
    }

    .table td {
        background: var(--card) !important;
        color: var(--foreground) !important;
        border-color: var(--border) !important;
    }

    .table tbody tr {
        background: var(--card) !important;
        color: var(--foreground) !important;
    }

    .table tbody tr:hover {
        background: var(--accent) !important;
    }

    .table tbody tr:hover td {
        background: var(--accent) !important;
        color: var(--foreground) !important;
    }

    .table td a,
    .table td strong {
        color: var(--foreground) !important;
    }

    .table td a:hover {
        color: var(--primary) !important;
    }

    .breadcrumb {
        background: var(--card);
        padding: 0.75rem 1rem;
        border-radius: var(--radius);
    }

    .breadcrumb-item a {
        color: var(--primary);
        text-decoration: none;
    }

    .breadcrumb-item a:hover {
        text-decoration: underline;
    }

    .breadcrumb-item.active {
        color: var(--foreground);
    }

    .modal-content {
        background: var(--card);
        color: var(--foreground);
        border-color: var(--border);
    }

    .modal-header {
        border-bottom-color: var(--border);
    }

    .modal-footer {
        border-top-color: var(--border);
    }

    /* Button icon styling for proper visibility */
    .table .btn-outline-primary {
        color: #0d6efd !important;
    }

    .table .btn-outline-info {
