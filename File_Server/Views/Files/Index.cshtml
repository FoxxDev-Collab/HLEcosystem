@section Scripts {
    <script src="~/js/file-upload.js" asp-append-version="true"></script>
    <script>
        let moveModal;
        let renameModal;
        let shareModal;
        let allFolders = [];
        let searchTimeout;

        document.addEventListener('DOMContentLoaded', function() {
            moveModal = new bootstrap.Modal(document.getElementById('moveModal'));
            renameModal = new bootstrap.Modal(document.getElementById('renameModal'));
            shareModal = new bootstrap.Modal(document.getElementById('shareModal'));

            // User search input event
            document.getElementById('userSearch').addEventListener('input', handleUserSearch);

            // Reinitialize Lucide icons
            lucide.createIcons();
        });

        function openRenameModal(itemId, currentName) {
            // Set item details
            document.getElementById('renameItemId').value = itemId;
            document.getElementById('newItemName').value = currentName;

            // Clear any previous alerts
            const alertDiv = document.getElementById('renameAlert');
            alertDiv.classList.add('d-none');

            // Show modal
            renameModal.show();

            // Focus and select the input
            setTimeout(() => {
                const input = document.getElementById('newItemName');
                input.focus();
                input.select();
            }, 500);
        }

        async function submitRename() {
            const itemId = document.getElementById('renameItemId').value;
            const newName = document.getElementById('newItemName').value.trim();
            const alertDiv = document.getElementById('renameAlert');

            if (!newName) {
                showRenameAlert('Name cannot be empty.', 'danger');
                return;
            }

            try {
                // Get anti-forgery token
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

                const response = await fetch('/Files/Rename', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: `id=${itemId}&newName=${encodeURIComponent(newName)}&__RequestVerificationToken=${encodeURIComponent(token)}`
                });

                const result = await response.json();

                if (result.success) {
                    // Close modal and reload page
                    renameModal.hide();
                    location.reload();
                } else {
                    showRenameAlert(result.message, 'danger');
                }
            } catch (error) {
                console.error('Error renaming item:', error);
                showRenameAlert('Failed to rename item. Please try again.', 'danger');
            }
        }

        function showRenameAlert(message, type) {
            const alertDiv = document.getElementById('renameAlert');
            alertDiv.className = `alert alert-${type}`;
            alertDiv.textContent = message;
            alertDiv.classList.remove('d-none');
        }

        async function openMoveModal(itemId, itemName, isFolder) {
            // Set item details
            document.getElementById('moveItemId').value = itemId;
            document.getElementById('moveItemName').textContent = itemName;

            // Load folder tree
            try {
                const excludeId = isFolder ? itemId : null;
                const response = await fetch(`/Files/GetFolderTree?excludeFolderId=${excludeId || ''}`);
                allFolders = await response.json();

                // Build folder hierarchy
                const select = document.getElementById('destinationFolder');
                select.innerHTML = '<option value="">Home (Root)</option>';

                // Build folder tree recursively
                const rootFolders = allFolders.filter(f => f.parentFolderId === null);
                rootFolders.forEach(folder => {
                    addFolderOption(select, folder, 0);
                });

                // Show modal
                moveModal.show();
            } catch (error) {
                console.error('Error loading folders:', error);
                alert('Failed to load folder list. Please try again.');
            }
        }

        function addFolderOption(select, folder, level) {
            const option = document.createElement('option');
            option.value = folder.id;
            const indent = '\u00A0\u00A0\u00A0'.repeat(level); // Non-breaking spaces for indentation
            option.textContent = indent + 'ðŸ“ ' + folder.fileName;  // Keep emoji here for select dropdown text
            select.appendChild(option);

            // Add child folders
            const children = allFolders.filter(f => f.parentFolderId === folder.id);
            children.forEach(child => {
                addFolderOption(select, child, level + 1);
            });
        }

        function openShareModal(itemId, itemName) {
            // Set item details
            document.getElementById('shareItemId').value = itemId;
            document.getElementById('shareItemName').textContent = itemName;

            // Clear previous selections
            document.getElementById('userSearch').value = '';
            document.getElementById('userSearchResults').innerHTML = '';
            document.getElementById('shareWithUserId').value = '';
            document.getElementById('shareSubmitBtn').disabled = true;

            const alertDiv = document.getElementById('shareAlert');
            alertDiv.classList.add('d-none');

            // Show modal
            shareModal.show();
        }

        function handleUserSearch(event) {
            const query = event.target.value.trim();

            clearTimeout(searchTimeout);

            if (query.length < 2) {
                document.getElementById('userSearchResults').innerHTML = '';
                return;
            }

            searchTimeout = setTimeout(async () => {
                try {
                    const response = await fetch(`/Shares/GetUsers?query=${encodeURIComponent(query)}`);
                    const users = await response.json();

                    displayUserResults(users);
                } catch (error) {
                    console.error('Error searching users:', error);
                }
            }, 300);
        }

        function displayUserResults(users) {
            const resultsDiv = document.getElementById('userSearchResults');

            if (users.length === 0) {
                resultsDiv.innerHTML = '<div class="list-group-item text-muted">No users found</div>';
                return;
            }

            resultsDiv.innerHTML = users.map(user => `
                <a href="#" class="list-group-item list-group-item-action" onclick="selectUser('${user.id}', '${escapeHtml(user.fullName || user.userName)}'); return false;">
                    <div class="d-flex w-100 justify-content-between">
                        <h6 class="mb-1">${escapeHtml(user.fullName)}</h6>
                        <small>${escapeHtml(user.userName)}</small>
                    </div>
                    <small class="text-muted">${escapeHtml(user.email)}</small>
                </a>
            `).join('');
        }

        function selectUser(userId, displayName) {
            document.getElementById('shareWithUserId').value = userId;
            document.getElementById('userSearch').value = displayName;
            document.getElementById('userSearchResults').innerHTML = '';
            document.getElementById('shareSubmitBtn').disabled = false;
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        // Version History Functions
        let versionModal;
        let currentVersionFileId = null;

        document.addEventListener('DOMContentLoaded', function() {
            versionModal = new bootstrap.Modal(document.getElementById('versionModal'));
        });

        async function openVersionModal(fileId, fileName) {
            currentVersionFileId = fileId;
            document.getElementById('versionFileName').textContent = fileName;
            document.getElementById('versionLoading').style.display = 'block';
            document.getElementById('versionContent').style.display = 'none';

            versionModal.show();

            try {
                const response = await fetch(`/Files/GetVersions?id=${fileId}`);
                const data = await response.json();

                // Update versioning status
                const statusBadge = document.getElementById('versioningStatus');
                statusBadge.textContent = data.versioningEnabled ? 'Enabled' : 'Disabled';
                statusBadge.className = `badge ${data.versioningEnabled ? 'bg-success' : 'bg-secondary'}`;

                // Populate version table
                const tbody = document.getElementById('versionTableBody');
                tbody.innerHTML = '';

                if (data.versions && data.versions.length > 0) {
                    document.getElementById('noVersions').style.display = 'none';

                    data.versions.forEach(version => {
                        const row = document.createElement('tr');
                        row.innerHTML = `
                            <td>
                                <strong>v${version.versionNumber}</strong>
                                ${version.isCurrent ? '<span class="badge bg-primary ms-2">Current</span>' : ''}
                            </td>
                            <td>${formatFileSize(version.fileSize)}</td>
                            <td>${formatDate(version.createdAt)}</td>
                            <td>
                                ${version.isCurrent ? '' : `
                                    <div class="btn-group btn-group-sm">
                                        <a href="/Files/DownloadVersion?id=${fileId}&versionId=${version.id}" class="btn btn-outline-primary" title="Download">
                                            <i data-lucide="download" style="width: 14px; height: 14px;"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-success" title="Restore" onclick="restoreVersion(${fileId}, ${version.id}, ${version.versionNumber})">
                                            <i data-lucide="rotate-ccw" style="width: 14px; height: 14px;"></i>
                                        </button>
                                        <button type="button" class="btn btn-outline-danger" title="Delete" onclick="deleteVersion(${fileId}, ${version.id}, ${version.versionNumber})">
                                            <i data-lucide="trash-2" style="width: 14px; height: 14px;"></i>
                                        </button>
                                    </div>
                                `}
                            </td>
                        `;
                        tbody.appendChild(row);
                    });

                    // Re-initialize Lucide icons
                    if (typeof lucide !== 'undefined') {
                        lucide.createIcons();
                    }
                } else {
                    document.getElementById('noVersions').style.display = 'block';
                }

                document.getElementById('versionLoading').style.display = 'none';
                document.getElementById('versionContent').style.display = 'block';
            } catch (error) {
                console.error('Error loading versions:', error);
                document.getElementById('versionLoading').innerHTML = '<p class="text-danger">Failed to load version history</p>';
            }
        }

        async function toggleVersioning() {
            if (!currentVersionFileId) return;

            const statusBadge = document.getElementById('versioningStatus');
            const currentlyEnabled = statusBadge.textContent === 'Enabled';
            const newEnabled = !currentlyEnabled;

            try {
                const response = await fetch(`/Files/ToggleVersioning?id=${currentVersionFileId}&enabled=${newEnabled}`, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                });

                const result = await response.json();
                if (result.success) {
                    statusBadge.textContent = result.versioningEnabled ? 'Enabled' : 'Disabled';
                    statusBadge.className = `badge ${result.versioningEnabled ? 'bg-success' : 'bg-secondary'}`;
                } else {
                    alert(result.message || 'Failed to toggle versioning');
                }
            } catch (error) {
                console.error('Error toggling versioning:', error);
                alert('Failed to toggle versioning');
            }
        }

        async function restoreVersion(fileId, versionId, versionNumber) {
            if (!confirm(`Restore to version ${versionNumber}? The current file will be saved as a new version.`)) {
                return;
            }

            try {
                const response = await fetch(`/Files/RestoreVersion?id=${fileId}&versionId=${versionId}`, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                });

                const result = await response.json();
                if (result.success) {
                    alert(result.message);
                    // Refresh version list
                    const fileName = document.getElementById('versionFileName').textContent;
                    openVersionModal(fileId, fileName);
                } else {
                    alert(result.message || 'Failed to restore version');
                }
            } catch (error) {
                console.error('Error restoring version:', error);
                alert('Failed to restore version');
            }
        }

        async function deleteVersion(fileId, versionId, versionNumber) {
            if (!confirm(`Permanently delete version ${versionNumber}? This cannot be undone.`)) {
                return;
            }

            try {
                const response = await fetch(`/Files/DeleteVersion?id=${fileId}&versionId=${versionId}`, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                });

                const result = await response.json();
                if (result.success) {
                    // Refresh version list
                    const fileName = document.getElementById('versionFileName').textContent;
                    openVersionModal(fileId, fileName);
                } else {
                    alert(result.message || 'Failed to delete version');
                }
            } catch (error) {
                console.error('Error deleting version:', error);
                alert('Failed to delete version');
            }
        }

        function formatFileSize(bytes) {
            const sizes = ['B', 'KB', 'MB', 'GB', 'TB'];
            if (bytes === 0) return '0 B';
            const i = Math.floor(Math.log(bytes) / Math.log(1024));
            return (bytes / Math.pow(1024, i)).toFixed(2) + ' ' + sizes[i];
        }

        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString() + ' ' + date.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
        }
    </script>
}
