@model IEnumerable<HLE.FileServer.Models.GroupFile>
@using HLE.FileServer.Helpers
@using HLE.FileServer.Models
@{
    ViewData["Title"] = "Group Details";
    var breadcrumbs = ViewBag.Breadcrumbs as List<(int? Id, string Name)> ?? new List<(int? Id, string Name)>();
    var currentFolderId = ViewBag.CurrentFolderId as int?;
    var group = ViewBag.Group as Group;
    var userMember = ViewBag.UserMember as GroupMember;
    var isOwner = ViewBag.IsOwner as bool? ?? false;
}

<div class="container-fluid py-4">
    <!-- Breadcrumb Navigation -->
    <div class="row mb-3">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Groups")">
                            @Html.Raw(Icons.Get("arrow-left", 14, "me-1"))
                            All Groups
                        </a>
                    </li>
                    @foreach (var crumb in breadcrumbs)
                    {
                        @if (crumb == breadcrumbs.Last())
                        {
                            <li class="breadcrumb-item active" aria-current="page">@crumb.Name</li>
                        }
                        else
                        {
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Details", "Groups", new { id = group.Id, folderId = crumb.Id })">@crumb.Name</a>
                            </li>
                        }
                    }
                </ol>
            </nav>
        </div>
    </div>

    <!-- Group Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card group-header-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
                        <div>
                            <h2 class="mb-2">
                                @Html.Raw(Icons.Get("grid", 28, "me-2"))
                                @Html.Encode(group.Name)
                            </h2>
                            @if (!string.IsNullOrEmpty(group.Description))
                            {
                                <p class="text-muted-foreground mb-0">@Html.Encode(group.Description)</p>
                            }
                        </div>
                        <div class="d-flex align-items-center gap-2">
                            @{
                                var roleText = isOwner ? "Owner" : userMember?.Role.ToString() ?? "Member";
                                var roleVariant = isOwner ? "primary" : userMember?.Role == GroupRole.Admin ? "warning" : "secondary";
                                ViewData["Text"] = roleText;
                                ViewData["Variant"] = roleVariant;
                                ViewData["Pill"] = true;
                            }
                            <partial name="_Badge" />
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-3 col-6">
                            <small class="text-muted-foreground d-block">Members</small>
                            <strong>@group.Members.Count</strong>
                        </div>
                        <div class="col-md-3 col-6">
                            <small class="text-muted-foreground d-block">Storage Used</small>
                            <strong>@FormatFileSize(group.StorageUsedBytes)</strong>
                        </div>
                        @if (group.StorageQuotaBytes > 0)
                        {
                            <div class="col-md-3 col-6">
                                <small class="text-muted-foreground d-block">Storage Quota</small>
                                <strong>@FormatFileSize(group.StorageQuotaBytes)</strong>
                            </div>
                            <div class="col-md-3 col-6">
                                <small class="text-muted-foreground d-block">Available</small>
                                <strong>@FormatFileSize(group.StorageQuotaBytes - group.StorageUsedBytes)</strong>
                            </div>
                        }
                        else
                        {
                            <div class="col-md-6 col-12">
                                <small class="text-muted-foreground d-block">Storage Quota</small>
                                <strong>Unlimited</strong>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        ViewData["Message"] = TempData["Success"]!.ToString();
        ViewData["Variant"] = "success";
        ViewData["Dismissible"] = "True";
        <partial name="_Alert" />
    }

    @if (TempData["Error"] != null)
    {
        ViewData["Message"] = TempData["Error"]!.ToString();
        ViewData["Variant"] = "danger";
        ViewData["Dismissible"] = "True";
        <partial name="_Alert" />
    }

    @if (TempData["Warning"] != null)
    {
        ViewData["Message"] = TempData["Warning"]!.ToString();
        ViewData["Variant"] = "warning";
        ViewData["Dismissible"] = "True";
        <partial name="_Alert" />
    }

    <!-- Action Buttons -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <h4 class="mb-0">@(breadcrumbs.Last().Name)</h4>
                <div class="btn-group d-none d-md-flex">
                    @if (isOwner || userMember?.CanManageMembers == true)
                    {
                        <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#membersModal" onclick="loadMembers()">
                            @Html.Raw(Icons.Get("users", 16, "me-2"))
                            Manage Members
                        </button>
                    }
                    @if (isOwner || userMember?.CanUpload == true)
                    {
                        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#newFolderModal">
                            @Html.Raw(Icons.Get("folder-plus", 16, "me-2"))
                            New Folder
                        </button>
                        <button type="button" class="btn btn-primary" onclick="document.getElementById('fileInput').click()">
                            @Html.Raw(Icons.Get("upload", 16, "me-2"))
                            Upload Files
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Mobile Action Buttons -->
    <div class="mobile-action-bar d-md-none">
        @if (isOwner || userMember?.CanManageMembers == true)
        {
            <button type="button" class="btn btn-info w-100" data-bs-toggle="modal" data-bs-target="#membersModal" onclick="loadMembers()">
                @Html.Raw(Icons.Get("users", 20, "me-2"))
                Manage Members
            </button>
        }
        @if (isOwner || userMember?.CanUpload == true)
        {
            <button type="button" class="btn btn-success w-100" data-bs-toggle="modal" data-bs-target="#newFolderModal">
                @Html.Raw(Icons.Get("folder-plus", 20, "me-2"))
                New Folder
            </button>
            <button type="button" class="btn btn-primary w-100" onclick="document.getElementById('fileInput').click()">
                @Html.Raw(Icons.Get("upload", 20, "me-2"))
                Upload Files
            </button>
        }
    </div>

    <!-- Upload Area -->
    @if (isOwner || userMember?.CanUpload == true)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div id="dropZone" class="upload-drop-zone">
                    @Html.Raw(Icons.Get("upload", 48, "mb-3"))
                    <h5>Drag & Drop Files Here</h5>
                    <p class="text-muted-foreground mb-0">or click to browse</p>
                    <form id="uploadForm" asp-action="Upload" asp-controller="Groups" method="post" enctype="multipart/form-data" data-upload-url="/Groups/UploadFile">
                        <input type="file" id="fileInput" name="files" multiple style="display: none;" />
                        <input type="hidden" name="groupId" value="@group.Id" />
                        <input type="hidden" name="currentFolderId" value="@currentFolderId" />
                        @Html.AntiForgeryToken()
                    </form>
                </div>
            </div>
        </div>
    }

    <!-- Files/Folders List -->
    @if (Model != null && Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Contents (@Model.Count() items)</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Size</th>
                                        <th>Type</th>
                                        <th>Uploaded By</th>
                                        <th>Modified</th>
                                        <th style="width: 100px;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var entry in Model)
                                    {
                                        <tr>
                                            <td>
                                                @if (entry.IsFolder)
                                                {
                                                    <a href="@Url.Action("Details", "Groups", new { id = group.Id, folderId = entry.Id })" class="text-decoration-none">
                                                        <div class="d-flex align-items-center">
                                                            @Html.Raw(Icons.Get("folder", 20, "me-2"))
                                                            <strong>@Html.Encode(entry.FileName)</strong>
                                                        </div>
                                                    </a>
                                                }
                                                else
                                                {
                                                    <div class="d-flex align-items-center">
                                                        @Html.Raw(Icons.Get(GetFileIcon(entry.ContentType), 20, "me-2"))
                                                        <strong>@Html.Encode(entry.FileName)</strong>
                                                    </div>
                                                }
                                            </td>
                                            <td>@(entry.IsFolder ? "-" : FormatFileSize(entry.FileSize))</td>
                                            <td>
                                                @if (entry.IsFolder)
                                                {
                                                    ViewData["Text"] = "Folder";
                                                    ViewData["Variant"] = "warning";
                                                    <partial name="_Badge" />
                                                }
                                                else
                                                {
                                                    ViewData["Text"] = GetFileExtension(entry.FileName);
                                                    ViewData["Variant"] = "secondary";
                                                    <partial name="_Badge" />
                                                }
                                            </td>
                                            <td>@(entry.UploadedBy?.Email ?? "Unknown")</td>
                                            <td>@entry.UploadDate.ToLocalTime().ToString("MMM dd, yyyy HH:mm")</td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    @if (!entry.IsFolder && (isOwner || userMember?.CanDownload == true))
                                                    {
                                                        <a href="@Url.Action("Download", "Groups", new { id = entry.Id })" class="btn btn-outline-primary" title="Download">
                                                            @Html.Raw(Icons.Get("download", 16))
                                                        </a>
                                                    }
                                                    @if (isOwner || userMember?.CanDelete == true)
                                                    {
                                                        <form asp-action="DeleteFile" asp-route-id="@entry.Id" method="post" style="display: inline;" onsubmit="return confirm('@(entry.IsFolder ? "Are you sure you want to delete this folder and all its contents?" : "Are you sure you want to delete this file?")');">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-outline-danger" title="Delete">
                                                                @Html.Raw(Icons.Get("trash", 16))
                                                            </button>
                                                        </form>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Mobile Card View -->
                        <div class="mobile-file-list" style="display: none;">
                            @foreach (var entry in Model)
                            {
                                <div class="mobile-file-card">
                                    @if (entry.IsFolder)
                                    {
                                        <a href="@Url.Action("Details", "Groups", new { id = group.Id, folderId = entry.Id })" class="text-decoration-none">
                                            <div class="d-flex align-items-start gap-3">
                                                <div class="mobile-file-icon">üìÅ</div>
                                                <div class="mobile-file-info">
                                                    <div class="mobile-file-name">@Html.Encode(entry.FileName)</div>
                                                    <div class="mobile-file-meta">
                                                        <span class="badge bg-warning">Folder</span>
                                                        <span>By @Html.Encode(entry.UploadedBy?.Email ?? "Unknown")</span>
                                                        <span>@entry.UploadDate.ToLocalTime().ToString("MMM dd")</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </a>
                                        @if (isOwner || userMember?.CanDelete == true)
                                        {
                                            <div class="mobile-file-actions">
                                                <form asp-action="DeleteFile" asp-route-id="@entry.Id" method="post" class="w-100" onsubmit="return confirm('Are you sure you want to delete this folder and all its contents?');">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-outline-danger w-100">
                                                        @Html.Raw(Icons.Get("trash", 16))
                                                        Delete
                                                    </button>
                                                </form>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-start gap-3">
                                            <div class="mobile-file-icon">@Html.Raw(Icons.Get(GetFileIcon(entry.ContentType), 40))</div>
                                            <div class="mobile-file-info">
                                                <div class="mobile-file-name">@Html.Encode(entry.FileName)</div>
                                                <div class="mobile-file-meta">
                                                    <span class="badge bg-secondary">@GetFileExtension(entry.FileName)</span>
                                                    <span>@FormatFileSize(entry.FileSize)</span>
                                                    <span>By @Html.Encode(entry.UploadedBy?.Email ?? "Unknown")</span>
                                                    <span>@entry.UploadDate.ToLocalTime().ToString("MMM dd")</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="mobile-file-actions">
                                            @if (isOwner || userMember?.CanDownload == true)
                                            {
                                                <a href="@Url.Action("Download", "Groups", new { id = entry.Id })" class="btn btn-outline-primary">
                                                    @Html.Raw(Icons.Get("download", 16))
                                                    Download
                                                </a>
                                            }
                                            @if (isOwner || userMember?.CanDelete == true)
                                            {
                                                <form asp-action="DeleteFile" asp-route-id="@entry.Id" method="post" style="flex: 1;" onsubmit="return confirm('Are you sure you want to delete this file?');">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-outline-danger w-100">
                                                        @Html.Raw(Icons.Get("trash", 16))
                                                        Delete
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        @Html.Raw(Icons.Get("folder", 64, "text-muted mb-3"))
                        <h4>This Folder is Empty</h4>
                        <p class="text-muted-foreground">
                            @if (isOwner || userMember?.CanUpload == true)
                            {
                                <text>Create a new folder or upload files to get started!</text>
                            }
                            else
                            {
                                <text>No files or folders have been added yet.</text>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- New Folder Modal -->
<div class="modal fade" id="newFolderModal" tabindex="-1" aria-labelledby="newFolderModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="CreateFolder" asp-controller="Groups" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="newFolderModalLabel">Create New Folder</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="folderName" class="form-label">Folder Name</label>
                        <input type="text" class="form-control" id="folderName" name="folderName" required autofocus>
                    </div>
                    <input type="hidden" name="groupId" value="@group.Id" />
                    <input type="hidden" name="parentFolderId" value="@currentFolderId" />
                    @Html.AntiForgeryToken()
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">
                        @Html.Raw(Icons.Get("folder-plus", 16, "me-2"))
                        Create Folder
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Members Modal -->
