@section Scripts {
    <script src="~/js/file-upload.js" asp-append-version="true"></script>
    <script>
        const groupId = @group.Id;
        const isOwner = @(isOwner ? "true" : "false");
        const canManageMembers = @((isOwner || userMember?.CanManageMembers == true) ? "true" : "false");
        let searchTimeout;
        let currentMembers = [];

        // Load members list
        async function loadMembers() {
            try {
                const response = await fetch(`/Groups/GetMembers/${groupId}`);
                const members = await response.json();
                currentMembers = members;
                displayMembers(members);
            } catch (error) {
                console.error('Error loading members:', error);
                document.getElementById('membersListContainer').innerHTML = '<div class="alert alert-danger">Failed to load members.</div>';
            }
        }

        // Display members in the table
        function displayMembers(members) {
            const container = document.getElementById('membersListContainer');

            if (members.length === 0) {
                container.innerHTML = '<div class="text-center py-4"><p class="text-muted-foreground">No members yet.</p></div>';
                return;
            }

            let html = '<div class="table-responsive"><table class="table table-hover"><thead><tr>';
            html += '<th>Name</th><th>Email</th><th>Role</th><th>Permissions</th><th>Joined</th>';
            if (canManageMembers) html += '<th>Actions</th>';
            html += '</tr></thead><tbody>';

            members.forEach(member => {
                html += '<tr>';
                html += `<td><strong>${escapeHtml(member.fullName)}</strong><br><small class="text-muted-foreground">${escapeHtml(member.userName)}</small></td>`;
                html += `<td>${escapeHtml(member.email)}</td>`;

                // Role badge
                const roleVariant = member.role === 'Owner' ? 'primary' : member.role === 'Admin' ? 'warning' : 'secondary';
                html += `<td><span class="badge bg-${roleVariant}">${member.role}</span></td>`;

                // Permissions
                html += '<td><div class="d-flex flex-wrap gap-1">';
                if (member.canUpload) html += '<span class="badge bg-success">Upload</span>';
                if (member.canDownload) html += '<span class="badge bg-info">Download</span>';
                if (member.canDelete) html += '<span class="badge bg-danger">Delete</span>';
                if (member.canManageMembers) html += '<span class="badge bg-warning">Manage</span>';
                html += '</div></td>';

                html += `<td>${new Date(member.joinedDate).toLocaleDateString()}</td>`;

                // Actions
                if (canManageMembers) {
                    html += '<td>';
                    if (!member.isOwner) {
                        html += `<div class="btn-group btn-group-sm">`;
                        html += `<button class="btn btn-outline-info" onclick="openEditMemberModal(${member.id})" title="Edit"><svg xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' viewBox='0 0 16 16'><path d='M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z'/></svg></button>`;
                        html += `<button class="btn btn-outline-danger" onclick="removeMemberConfirm(${member.id}, '${escapeHtml(member.fullName)}')" title="Remove"><svg xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' viewBox='0 0 16 16'><path d='M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z'/><path fill-rule='evenodd' d='M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z'/></svg></button>`;
                        html += `</div>`;
                    } else {
                        html += '<span class="text-muted-foreground">Owner</span>';
                    }
                    html += '</td>';
                }

                html += '</tr>';
            });

            html += '</tbody></table></div>';
            container.innerHTML = html;
        }

        // User search for adding members
        document.getElementById('userSearch')?.addEventListener('input', function(e) {
            const query = e.target.value.trim();
            clearTimeout(searchTimeout);

            if (query.length < 2) {
                document.getElementById('userSearchResults').innerHTML = '';
                document.getElementById('addMemberForm').style.display = 'none';
                document.getElementById('addMemberBtn').disabled = true;
                return;
            }

            searchTimeout = setTimeout(async () => {
                try {
                    const response = await fetch(`/Groups/SearchUsers?query=${encodeURIComponent(query)}&groupId=${groupId}`);
                    const users = await response.json();
                    displayUserResults(users);
                } catch (error) {
                    console.error('Error searching users:', error);
                }
            }, 300);
        });

        function displayUserResults(users) {
            const resultsDiv = document.getElementById('userSearchResults');

            if (users.length === 0) {
                resultsDiv.innerHTML = '<div class="list-group-item text-muted">No users found</div>';
                return;
            }

            resultsDiv.innerHTML = users.map(user => `
                <a href="#" class="list-group-item list-group-item-action" onclick="selectUser('${user.id}', '${escapeHtml(user.fullName)}', '${escapeHtml(user.userName)}'); return false;">
                    <div class="d-flex w-100 justify-content-between">
                        <h6 class="mb-1">${escapeHtml(user.fullName)}</h6>
                        <small>${escapeHtml(user.userName)}</small>
                    </div>
                    <small class="text-muted">${escapeHtml(user.email)}</small>
                </a>
            `).join('');
        }

        function selectUser(userId, fullName, userName) {
            document.getElementById('selectedUserId').value = userId;
            document.getElementById('selectedUserName').textContent = fullName;
            document.getElementById('userSearch').value = userName;
            document.getElementById('userSearchResults').innerHTML = '';
            document.getElementById('addMemberForm').style.display = 'block';
            document.getElementById('addMemberBtn').disabled = false;
        }

        // Add member
        async function addMember() {
            const userId = document.getElementById('selectedUserId').value;
            const role = document.getElementById('memberRole').value;
            const canUpload = document.getElementById('permCanUpload').checked;
            const canDownload = document.getElementById('permCanDownload').checked;
            const canDelete = document.getElementById('permCanDelete').checked;
            const canManageMembers = document.getElementById('permCanManageMembers').checked;

            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const formData = new FormData();
                formData.append('groupId', groupId);
                formData.append('userId', userId);
                formData.append('role', role);
                formData.append('canUpload', canUpload);
                formData.append('canDownload', canDownload);
                formData.append('canDelete', canDelete);
                formData.append('canManageMembers', canManageMembers);
                formData.append('__RequestVerificationToken', token);

                const response = await fetch('/Groups/AddMember', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    bootstrap.Modal.getInstance(document.getElementById('addMemberModal')).hide();
                    loadMembers();
                    // Reset form
                    document.getElementById('userSearch').value = '';
                    document.getElementById('addMemberForm').style.display = 'none';
                    document.getElementById('addMemberBtn').disabled = true;
                } else {
                    showAlert('addMemberAlert', result.message, 'danger');
                }
            } catch (error) {
                console.error('Error adding member:', error);
                showAlert('addMemberAlert', 'Failed to add member.', 'danger');
            }
        }

        // Open edit member modal
        function openEditMemberModal(memberId) {
            const member = currentMembers.find(m => m.id === memberId);
            if (!member) return;

            document.getElementById('editMemberId').value = memberId;
            document.getElementById('editMemberName').textContent = member.fullName;
            document.getElementById('editMemberRole').value = member.roleValue;
            document.getElementById('editPermCanUpload').checked = member.canUpload;
            document.getElementById('editPermCanDownload').checked = member.canDownload;
            document.getElementById('editPermCanDelete').checked = member.canDelete;
            document.getElementById('editPermCanManageMembers').checked = member.canManageMembers;

            new bootstrap.Modal(document.getElementById('editMemberModal')).show();
        }

        // Update member
        async function updateMember() {
            const memberId = document.getElementById('editMemberId').value;
            const role = document.getElementById('editMemberRole').value;
            const canUpload = document.getElementById('editPermCanUpload').checked;
            const canDownload = document.getElementById('editPermCanDownload').checked;
            const canDelete = document.getElementById('editPermCanDelete').checked;
            const canManageMembers = document.getElementById('editPermCanManageMembers').checked;

            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const formData = new FormData();
                formData.append('memberId', memberId);
                formData.append('role', role);
                formData.append('canUpload', canUpload);
                formData.append('canDownload', canDownload);
                formData.append('canDelete', canDelete);
                formData.append('canManageMembers', canManageMembers);
                formData.append('__RequestVerificationToken', token);

                const response = await fetch('/Groups/UpdateMember', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    bootstrap.Modal.getInstance(document.getElementById('editMemberModal')).hide();
                    loadMembers();
                } else {
                    showAlert('editMemberAlert', result.message, 'danger');
                }
            } catch (error) {
                console.error('Error updating member:', error);
                showAlert('editMemberAlert', 'Failed to update member.', 'danger');
            }
        }

        // Remove member confirmation
        function removeMemberConfirm(memberId, memberName) {
            if (!confirm(`Are you sure you want to remove ${memberName} from this group?`)) {
                return;
            }
            removeMember(memberId);
        }

        // Remove member
        async function removeMember(memberId) {
            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const formData = new FormData();
                formData.append('memberId', memberId);
                formData.append('__RequestVerificationToken', token);

                const response = await fetch('/Groups/RemoveMember', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    loadMembers();
                } else {
                    alert(result.message);
                }
            } catch (error) {
                console.error('Error removing member:', error);
                alert('Failed to remove member.');
            }
        }

        function showAlert(elementId, message, type) {
            const alertDiv = document.getElementById(elementId);
            alertDiv.className = `alert alert-${type}`;
            alertDiv.textContent = message;
            alertDiv.classList.remove('d-none');
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
    </script>
}
