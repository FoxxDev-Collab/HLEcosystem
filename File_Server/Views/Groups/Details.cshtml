    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="membersModalLabel">
                    @Html.Raw(Icons.Get("users", 20, "me-2"))
                    Group Members
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @if (isOwner || userMember?.CanManageMembers == true)
                {
                    <div class="mb-3">
                        <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addMemberModal">
                            @Html.Raw(Icons.Get("plus", 16, "me-2"))
                            Add Member
                        </button>
                    </div>
                }

                <div id="membersListContainer">
                    <div class="text-center py-4">
                        @Html.Raw(Icons.Get("user", 48, "text-muted mb-3"))
                        <p class="text-muted-foreground">Loading members...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Member Modal -->
